{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowUnreachableCode": true
  },
  "files": [
    "src/Main.ts",
    "typings/main.d.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "typings/browser",
    "typings/browser.d.ts",
    "piratefight",
    "samples/piratefight",
    "samples/movingboxes/client"
  ]
}